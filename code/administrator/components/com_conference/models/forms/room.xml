<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="room">
        <field name="conference_room_id"
               type="hidden"/>

        <field name="title"
               type="text"
               label="COM_CONFERENCE_FIELD_TITLE"
               required="true"
               class="input-xlarge"/>

        <field name="type"
               type="list"
               label="COM_CONFERENCE_FIELD_TYPE"
               class="input-xlarge advancedSelect">
            <option value="">COM_CONFERENCE_SELECT_TYPE</option>
            <option value="0">COM_CONFERENCE_ROOM_TYPE_GENERAL</option>
            <option value="1">COM_CONFERENCE_ROOM_TYPE_ROOM</option>
        </field>

        <field name="description"
               type="editor"
               label="COM_CONFERENCE_FIELD_DESCRIPTION"
               class="input-xlarge"/>

        <field name="enabled"
               type="list"
               label="JPUBLISHED"
               size="1"
               class="advancedSelect"
               default="">
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field name="created_by"
               type="conference.user"
               label="JGLOBAL_FIELD_CREATED_BY_LABEL"
               readonly="true"
               class="input-xlarge"/>

        <field name="created_on"
               type="calendar"
               label="JGLOBAL_FIELD_CREATED_LABEL"
               class="input-xlarge"/>

        <field name="modified_by"
               type="conference.user"
               label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
               readonly="true"
               class="input-xlarge"/>

        <field name="modified_on"
               type="calendar"
               label="JGLOBAL_FIELD_MODIFIED_LABEL"
               class="input-xlarge"/>
    </fieldset>
</form>
